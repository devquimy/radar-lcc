FROM php:8.2-fpm

# 1. Instala dependências de sistema e extensões PHP
RUN apt-get update && apt-get install -y \
      git curl unzip zip libpng-dev libonig-dev libxml2-dev \
      nodejs npm \
      netcat-openbsd \
    && docker-php-ext-install pdo_mysql mbstring exif pcntl bcmath gd \
    && rm -rf /var/lib/apt/lists/*

# 2. Instala o Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

WORKDIR /var/www/html

# 3. Copia o script wait-for-it
COPY wait-for-it.sh /usr/local/bin/wait-for-it.sh
RUN chmod +x /usr/local/bin/wait-for-it.sh

# 4. Copia o entrypoint que irá chamar o wait-for-it e depois o comando principal
COPY entrypoint.sh /usr/local/bin/entrypoint.sh
RUN chmod +x /usr/local/bin/entrypoint.sh

# 5. Copia o restante da aplicação
COPY . .

# 6. Instala dependências PHP
RUN composer install --no-interaction --prefer-dist

# 7. Ajusta permissões
RUN chown -R www-data:www-data storage bootstrap/cache

# 8. Define entrypoint e comando padrão
ENTRYPOINT ["entrypoint.sh"]
CMD ["php", "artisan", "serve", "--host=0.0.0.0", "--port=8000"]